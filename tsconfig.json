{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "declaration": false,
    "stripInternal": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*"
  ]
}
